{% extends "tease.twig" %}

{% block content %}
	<!-- tease-post.twig -->
	<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.preview.length(25)}}</p>
		{% if post.thumbnail.src %}
			<img src="{{post.thumbnail.src}}" srcset="{{post.thumbnail.srcset}}" sizes="{{ post.thumbnail.img_sizes }}"/>
		{% endif %}
{% endblock %}